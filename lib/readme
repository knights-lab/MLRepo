0. Some prep work
# Download all raw files from dropbox directly onto MSI
    curl -L -o foldername.zip [public-link-to-folder]?dl=1
# unzip all files into folders with same name as zip
    find -name '*.zip' -exec sh -c 'unzip -d "${1%.*}" "$1"' _ {} \;

